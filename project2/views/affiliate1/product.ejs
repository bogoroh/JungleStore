<!-- Default home page -->
<link type="text/css" href='/styles/affiliate1style.css' rel='stylesheet'/>
<link href='http://fonts.googleapis.com/css?family=Oleo+Script:400,700|Lato' rel='stylesheet' type='text/css'>

<!--[if IE 7]>
    <style>
    .getting-started li{overflow:visible;clear:both}.delete{width:690px}
    </style>
<![endif]-->


<div class="container">

        <% include header %>
        <% include nav %>

<div>
    <span class="breadcrumbs"> &gt;
        <a href="/affiliate1/<%= details.category %>"> <%= details.category %></a> &gt;
        <%= details.name %>
    </span>

    <form class="productPage" data-sku="<%= details.sku %>" data-price="<%= prices.price %>" data-name="<%= details.name %>">

        <h3><%= details.name %></h3>
         <a href="/images/<%= details.photos.full[0] %>" data-lightbox="productImages"><img src="/images/<%= details.photos.full[0] %>"></a>
         <div class='productInfo'>
        <p><%= details.description %></p>

         <p>msrp: <span class="strikethrough right">$<%= details.msrp %></span></p>
         <p>Our price: <span name="price" class="right">$<%= prices.price %></span></p>

        <!-- category: <%= details.category %><br> -->
            <%= details.stock %> in stock<br>
            <button type="submit" class="addToCart right">Add To Cart</button>

        <p class="otherImages">
            <% for(var j=0; j<details.photos.thumbs.length; j++) {%>
            <a href="/images/<%= details.photos.full[j] %>" data-lightbox="productImages"><img src="/images/<%= details.photos.thumbs[j] %>"></a>

            <% } %>
        </p>
        </div>


    </form>
</div>


</div>
<script type="text/javascript" src="/js/Affiliate1.js"></script>
