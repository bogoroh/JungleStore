<!-- Default home page -->
<link type="text/css" href='/styles/affiliate1style.css' rel='stylesheet'/>

<!--[if IE 7]>
    <style>
    .getting-started li{overflow:visible;clear:both}.delete{width:690px}
    </style>
<![endif]-->


<div class="container">

        <% include header %>
        <% include nav %>

<div>
    <span class="breadcrumbs"> &gt;
        <a href="/affiliate1/<%= details.category %>"> <%= details.category %></a> &gt;
        <%= details.name %>
    </span>

    <form data-sku="<%= details.sku %>" data-price="<%= prices.price %>">

        <h3><%= details.name %></h3>
         <a href="/images/<%= details.photos[0] %>" data-lightbox="productImages"><img src="/images/<%= details.photos[0] %>"></a>
        <p><%= details.description %></p>

         <p>msrp: <span class="strikethrough right">$<%= details.msrp %></span></p>
         <p>Our price: <span name="price" class="right">$<%= prices.price %></span></p>

        <p>    <!-- category: <%= details.category %><br> -->
            <%= details.stock %> in stock<br>
            <button type="submit" class="addToCart right">Add To Cart</button>
        </p>
        <p class="otherImages">
            <% for(var j=1; j<details.photos.length; j++) {%>
            <a href="/images/<%= details.photos[j] %>" data-lightbox="productImages"><img src="/images/<%= details.photos[j] %>"></a>

            <% } %>
        </p>


    </form>
</div>


</div>
