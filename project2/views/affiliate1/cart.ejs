<div class="container">

        <% include header %>
        <% include nav %>


<div>
    <h3>Your Cart</h3>
    <ul id="shoppingCart">
        <% for(var i=0; i<cart.length; i++) {%>

            <li data-sku="<%= cart[i].sku %>" data-price="<%= cart[i].price %>" data-name="<%= cart[i].name %>">
                <!-- <a href="/affiliate1/product/<%= cart[i].sku %>"></a> -->
                <div class="cartInfo">
                    Qty: <input type='text' class="edit-box" name="qty" value="<%= cart[i].qty %>"/><br>
                    Item Total: <span name="total">$<span class="itemTotal"><%= cart[i].total %></span></span>
                </div>
                <div class="cartActions">
                    <button class="updateItem update">Update</button><br>
                    <button class="deleteItem remove">Remove</button>
                </div>


                <span name="itemName"><%= cart[i].name %></span><br>
                <span name="price">Our price: $<%= cart[i].price %></span>



            </li>



        <% } %>
    </ul>
</div>

<h3>Total: $<span id="cartTotal"><%= total.total %></span></h3>
</div>

<script type="text/javascript" src="/js/Affiliate1.js"></script>
